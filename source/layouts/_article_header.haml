- @lighter ||= ""
- @dark_header = "dark_header" if current_article.data['dark_header']
- if !current_article.data['header_image'].nil? && current_article.data['header_image'] != ""
  - @lighter = "lighter"
  .banner
    = image_tag current_article.data['header_image'], class: "fadeInDown animated"

%div{ class: "article-header #{@lighter} #{@dark_header}" }
  %h1= current_article.title
  %h2= current_article.data['subtitle']
  .tags
    - current_article.tags.sort.each do |tag|
      .tag= link_to tag, tag_path( tag ), class: "btn btn-primary"

  %a#comment_shower_scroll{ href: "#comment_shower"}
    %span.disqus-comment-count{ "data-disqus-identifier" => (current_article.data['disqus_id'] || current_article.path ) }
