<%
  map = {articles:{}}
  index = {}
  blog.articles.each do |article|
    map[:articles][article.url] = {
      title: article.title, 
      date: article.date, 
      tags: article.tags 
    }

    words = "#{article.title} #{article.body}"
    words = words
      .downcase
      .gsub( /<.*?>/, "" )
      .gsub( /[^\w ]/, "" )
      .split( /\s+/ )
      .sort.uniq

    words.each do |w|
      index[w] ||= []
      index[w] << article.url
    end
  end
  map[:index] = index
%>
<%= map.to_json %>